<?xml version="1.0" encoding="utf-8" ?>
<views:RedGunContent  
             xmlns:views="clr-namespace:RedGunMVVM.Views;assembly=RedGunMVVM"
             xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="{Binding Title}"
             x:Class="Example.Views.ToDoDetailPage">
    <ContentPage.Content>
        <StackLayout>
            <Frame BorderColor="Orange"
                               CornerRadius="10"
                               HasShadow="True">
                <Label Text="{Binding Item.Text}" />
            </Frame>
        </StackLayout>
    </ContentPage.Content>
</views:RedGunContent>