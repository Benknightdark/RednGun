<?xml version="1.0" encoding="utf-8" ?>
<views:RedGunContent  
             xmlns:views="clr-namespace:RedGunMVVM.Views;assembly=RedGunMVVM"
             xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"            
             Title="{Binding Title}"
             x:Class="Example.Views.CreateToDoPage">
    <ContentPage.Content>
        <StackLayout>
            <Entry Placeholder="Enter ToDo Item Text" Text="{Binding ItemText}"></Entry>
            <Button Text="Add New ToDo Item" Command="{Binding AddNewTodoItemCommand}"></Button>
        </StackLayout>
    </ContentPage.Content>
</views:RedGunContent>